            <button class="btn btn--style-ghost btn--hoverColor-info">Info</button>
            <button class="btn btn--style-ghost btn--hoverColor-warning">Warning</button>
            <button class="btn btn--style-ghost btn--hoverColor-negative">Negative</button>
            <pre><code>&lt;button class="btn btn--style-ghost"&gt;...&lt;/button&gt;</code></pre>
        </div>
    </div>
</div>

