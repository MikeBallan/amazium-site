<style>
    .avatar             { margin:0 20px 0 0; }

    .avatar             { width:38px; height:38px; display:inline-block; font-size:14px; line-height:38px; position:relative; top:0; left:0; }
    .avatar-img         { width:100%; height:100%; border-radius:50%; overflow:hidden; background-size:cover; background-repeat:no-repeat; background-position:50%; position:absolute; top:0; left:0; z-index:10; }
    .avatar-initials    { width:calc(100% - 2px); height:calc(100% - 2px); border-radius:50%; overflow:hidden; background-color:#26343E; color:#FFF; font-weight:bold; text-align:center;  position:absolute; top:1px; left:1px; z-index:9; }

    .avatar--size-xl    { width:100px; height:100px; font-size:34px; line-height:100px; }
    .avatar--size-l     { width:70px; height:70px; font-size:24px; line-height:70px; }
    .avatar--size-m     { width:40px; height:40px; font-size:14px; line-height:40px; }
    .avatar--size-s     { width:30px; height:30px; font-size:12px; line-height:30px; }

    .avatar + h4        { margin-top:+60px; }
</style>

